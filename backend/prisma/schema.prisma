generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String @id @default(cuid())
  email  String @unique
  name  String
  sessions Session[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id    String @id @default(cuid())
  userId  String 
  title   String?
  state SessionState @default(RECORDING)
  startedAt DateTime  @default(now())
  stoppedAt DateTime?
  transcriptRow Json?
  transcriptText String?
  summary String?
  durationSec Int?
  chunks Chunk[]
  user User @relation(fields: [userId], references: [id])
}

model Chunk {
  id String @id @default(cuid())
  session Session @relation(fields: [sessionId], references: [id])
  sessionId String
  seq Int
  uploadedAt DateTime @default(now())
  blobUrl String?
  sizeBytes Int
  meta Json?
}

enum SessionState {
  RECORDING
  PAUSED
  PROCESSING
  COMPLETED
  ERROR
}
